<config>
    <modules>
        <Hackathon_IndexerStats>
            <version>0.1.0</version>
        </Hackathon_IndexerStats>
    </modules>
    <global>
        <events>
            <!--
              There is an "index_process_change_status" event, but it does not get triggered
              when the index process ends, instead the status is directly updated via resource model.
              So unfortunately the observer has to be registered for every indexer process
            -->
            <after_reindex_process_catalog_product_attribute>
                <observers>
                    <hackathon_indexerstats>
                        <class>hackathon_indexerstats/observer</class>
                        <method>saveHistory</method>
                    </hackathon_indexerstats>
                </observers>
            </after_reindex_process_catalog_product_attribute>
            <after_reindex_process_catalog_product_price>
                <observers>
                    <hackathon_indexerstats>
                        <class>hackathon_indexerstats/observer</class>
                        <method>saveHistory</method>
                    </hackathon_indexerstats>
                </observers>
            </after_reindex_process_catalog_product_price>
            <after_reindex_process_catalog_url>
                <observers>
                    <hackathon_indexerstats>
                        <class>hackathon_indexerstats/observer</class>
                        <method>saveHistory</method>
                    </hackathon_indexerstats>
                </observers>
            </after_reindex_process_catalog_url>
            <after_reindex_process_catalog_product_flat>
                <observers>
                    <hackathon_indexerstats>
                        <class>hackathon_indexerstats/observer</class>
                        <method>saveHistory</method>
                    </hackathon_indexerstats>
                </observers>
            </after_reindex_process_catalog_product_flat>
            <after_reindex_process_catalog_category_flat>
                <observers>
                    <hackathon_indexerstats>
                        <class>hackathon_indexerstats/observer</class>
                        <method>saveHistory</method>
                    </hackathon_indexerstats>
                </observers>
            </after_reindex_process_catalog_category_flat>
            <after_reindex_process_catalog_category_product>
                <observers>
                    <hackathon_indexerstats>
                        <class>hackathon_indexerstats/observer</class>
                        <method>saveHistory</method>
                    </hackathon_indexerstats>
                </observers>
            </after_reindex_process_catalog_category_product>
            <after_reindex_process_catalogsearch_fulltext>
                <observers>
                    <hackathon_indexerstats>
                        <class>hackathon_indexerstats/observer</class>
                        <method>saveHistory</method>
                    </hackathon_indexerstats>
                </observers>
            </after_reindex_process_catalogsearch_fulltext>
            <after_reindex_process_cataloginventory_stock>
                <observers>
                    <hackathon_indexerstats>
                        <class>hackathon_indexerstats/observer</class>
                        <method>saveHistory</method>
                    </hackathon_indexerstats>
                </observers>
            </after_reindex_process_cataloginventory_stock>
            <after_reindex_process_tag_summary>
                <observers>
                    <hackathon_indexerstats>
                        <class>hackathon_indexerstats/observer</class>
                        <method>saveHistory</method>
                    </hackathon_indexerstats>
                </observers>
            </after_reindex_process_tag_summary>
        </events>
        <models>
            <hackathon_indexerstats>
                <class>Hackathon_IndexerStats_Model</class>
                <resourceModel>hackathon_indexerstats_resource</resourceModel>
            </hackathon_indexerstats>
            <hackathon_indexerstats_resource>
                <class>Hackathon_IndexerStats_Model_Resource</class>
                <entities>
                    <history>
                        <table>index_process_history</table>
                    </history>
                </entities>
            </hackathon_indexerstats_resource>
        </models>
        <blocks>
            <hackathon_indexerstats>
                <class>Hackathon_IndexerStats_Block</class>
            </hackathon_indexerstats>
        </blocks>
        <helpers>
            <hackathon_indexerstats>
                <class>Hackathon_IndexerStats_Helper</class>
            </hackathon_indexerstats>
        </helpers>
        <resources>
            <hackathon_indexerstats_setup>
                <setup>
                    <module>Hackathon_IndexerStats</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </hackathon_indexerstats_setup>
        </resources>
    </global>
    <adminhtml>
        <events>
            <adminhtml_block_html_before>
                <observers>
                    <hackathon_indexerstats>
                        <class>hackathon_indexerstats/observer</class>
                        <method>addIndexStatusColumn</method>
                    </hackathon_indexerstats>
                </observers>
            </adminhtml_block_html_before>
        </events>
        <translate>
            <modules>
                <Hackathon_IndexerStats>
                    <files>
                        <default>Hackathon_IndexerStats.csv</default>
                    </files>
                </Hackathon_IndexerStats>
            </modules>
        </translate>
        <layout>
            <updates>
                <hackathon_indexerstats module="Hackathon_IndexerStats">
                    <file>hackathon_indexerstats.xml</file>
                </hackathon_indexerstats>
            </updates>
            <jstranslate>
                <file>jstranslator.xml</file>
            </jstranslate>
        </layout>
    </adminhtml>
    <frontend/>
    <default>
        <hackathon_indexerstats>
            <process>
                <number_for_avg>5</number_for_avg>
            </process>
        </hackathon_indexerstats>
    </default>
</config>